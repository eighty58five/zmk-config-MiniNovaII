#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT  0
#define RAISE    1
#define LOWER    2
#define BOTH     3

// -----------------------------------
// | TAB:TAB |    |    |    |    |   -:-  =:=  <:<   |   (< = bksp)
// | ESC:ESC |    |    |    |    |    |   #:#   |
// |    |    |    |    |    |    |    |    |
//           |    |    |         |    |    |

/ {
    combos {
        compatible = "zmk,combos";

        combo_tab {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp TAB>;
        };

        combo_esc {
            timeout-ms = <50>;
            key-positions = <10 11>;
            bindings = <&kp ESC>;
        };

        combo_dash {
            timeout-ms = <50>;
            key-positions = <6 7>;
            bindings = <&kp MINUS>;
        };

        combo_eq {
            timeout-ms = <50>;
            key-positions = <7 8>;
            bindings = <&kp EQUAL>;
        };

        combo_bksp {
            timeout-ms = <50>;
            key-positions = <8 9>;
            bindings = <&kp BSPC>;
        };

        combo_hash {
            timeout-ms = <50>;
            key-positions = <17 18>;
            bindings = <&kp NON_US_HASH>;
        };

    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
    &kp Q      &kp W       &kp E      &kp R           &kp T      &kp Y     &kp U   &kp I     &kp O     &kp P
    &mt LCTRL A      &kp S       &mt LALT D      &kp F           &kp G      &kp H     &mt RALT J   &kp K     &mt RCTRL L
    &mt LSHIFT Z      &kp X       &kp C      &kp V           &kp B      &kp N     &kp M   &mt LSHIFT DOT
    &kp LSHIFT &lt TAB LOWER   &kp SPACE  &lt RAISE BSPC &kp ENTER
            >;
        };

        raise_layer {
            bindings = <
    &kp EXCL    &kp AT    &kp DLLR     &kp PRCNT     &kp CARET     &kp AMPS  &kp ASTRK    &kp LPAR    &kp RPAR    &kp BSPC
    &kp ESC    &trans    &trans     &trans     &trans     &kp LBKT  &kp RBKT   &kp APOS    &kp NUHS
    &trans     &trans    &trans     &kp PG_UP  &kp PG_DN  &kp MINUS  &kp EQUAL    &kp COMMA
    &kp LCTRL  &mo BOTH  &kp HOME   &mo BOTH   &trans
            >;
        };

        lower_layer {
            bindings = <
    &kp N1          &kp N2    &kp N3   &kp N4     &kp N5     &kp N6    &kp N7    &kp N8    &kp N9    &kp N0
    &kp CAPS        &trans    &trans   &trans     &trans     &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT
    &kp NON_US_BSLH &trans    &trans   &kp PG_UP  &kp PG_DN  &kp UNDER    &kp PLUS    &kp QMARK
    &kp LGUI        &mo BOTH  &kp END  &mo BOTH   &trans
            >;
        };

        both_layer {
            bindings = <
    &bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans  &trans  &trans  &kp UP &trans &kp DEL
    &trans       &trans       &trans       &trans       &trans  &trans  &kp LEFT  &kp DOWN &kp RIGHT
    &trans       &trans       &trans       &trans       &trans  &trans  &trans  &trans
    &out OUT_USB &trans       &out OUT_TOG &trans       &out OUT_BLE
            >;
        };

    };
};
